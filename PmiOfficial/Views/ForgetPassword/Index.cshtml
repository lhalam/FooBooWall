@{
    ViewBag.Title = "Password retrival|FBW";
}
@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/forgotpassword.js"></script>
}

<div class="container" style="width: 50%; border-style:ridge">
    <h1 align="center"> Password retrieval</h1>
    <hr />
    <div class="info" align="center">
        Please enter the <b>email</b> that is linked to the site.<br>
    </div>
    <br />
    <div class="form-horizontal" role="form">
        <div class="form-group">
            <label class="control-label col-sm-offset-1 col-sm-2" for="email">Email:</label>
            <div class="col-sm-8">
                <input type="email" class="form-control" id="emailForRestoring" placeholder="Enter email">
            </div>
        </div>
        <div class="info" align="center" style="display: none" id="toolTipForCode">

        </div>
        <div class="form-group" id="codeForRestoringDiv" style="display: none">
            <label class="control-label col-sm-offset-1 col-sm-2">Code:</label>
            <div class="col-sm-8">
                <input class="form-control" id="codeForRestoring" placeholder="Enter code">
            </div>
        </div>
        <div class="info" align="center" style="display: none" id="toolTipForPassword">

        </div>
        <div class="form-group" id="formNewPassword" style="display: none">
            <label class="control-label col-sm-offset-1 col-sm-2">New Password</label>
            <div class="col-sm-8">
                <input class="form-control" id="newPassword" type="password" placeholder="Password">
            </div>
        </div>
        <div class="form-group" id="formRepeatPassword" style="display: none">
            <label class="control-label col-sm-offset-1 col-sm-2">Repeat Password</label>
            <div class="col-sm-8">
                <input class="form-control" id="repeatPassword" type="password" placeholder="Password">
            </div>
        </div>
        <div class="info" align="center" style="display: none" id="passwordError">

        </div>
        <div class="form-group" id="nextBtnDiv">
            <div class="col-sm-offset-5 col-sm-10">
                <button id="nextBtn" class="btn btn-default">Next</button>
            </div>
        </div>
        <div class="form-group" id="nextBtn1Div" style="display: none">
            <div class="col-sm-offset-5 col-sm-10">
                <button id="nextBtn1" class="btn btn-default">Next</button>
            </div>
        </div>
        <div class="form-group" id="nextBtn2Div" style="display: none">
            <div class="col-sm-offset-5 col-sm-10">
                <button id="nextBtn2" class="btn btn-default">Next</button>
            </div>
        </div>
    </div>
</div>
