<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/Content/jquery.datepick.css">
    <link rel="stylesheet" type="text/css" href="~/Content/themes/base/all.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Chat.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/style.css" />
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("AddToLayout", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PMI 31", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Event", "Index", "Event", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Website Statistics", "Index", "Statistics", new { area = "" }, null)</li>
                    @Html.Action("UserInfo", "UserProfile")
                </ul>
            </div>
        </div>
    </div>
    <!--class="container body-content"-->
    <div>
        @RenderBody()
        <hr />
        <footer align="center">
            <p class="copy_rigths">&copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    <!-- Fetch the image addition script -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/globalChat.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
