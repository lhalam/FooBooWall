    <div id="site-header" class="site-header valign-center">
        <div class="intro">

            <h2>@ViewBag.Event.Time / @ViewBag.Event.Location</h2>

            <h1>@ViewBag.Event.Name</h1>

        </div>
    </div>

    <div id="about" class="section about">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">

                    <h3 class="section-title">About Event</h3>

                    <p>@ViewBag.Event.Decription</p>

                    <figure>
                        <img alt="" class="img-responsive" src="assets/images/about-us.jpg">
                    </figure>

                </div><!-- /.col-sm-12 -->

                

               
            </div><!-- /.row -->
        </div><!-- /.container -->
    </div>

    <div id="facts" class="section bg-image-1 facts text-center">
        <div class="container">
            <div class="row">
                <div class="col-sm-3">

                    <i class="ion-ios-calendar"></i>
                    <h3>2015<br>June 25</h3>

                </div>
                <div class="col-sm-3">

                    <i class="ion-ios-location"></i>
                    <h3>California<br>USA</h3>

                </div>
                <div class="col-sm-3">

                    <i class="ion-pricetags"></i>
                    <h3>150<br>Tickets</h3>

                </div>
                <div class="col-sm-3">

                    <i class="ion-speakerphone"></i>
                    <h3>06<br>Speakers</h3>

                </div>
            </div><!-- row -->
        </div><!-- container -->
    </div>



    <div id="comments" class="section speakers">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h3 class="section-title">Comments </h3>
                </div>
                @foreach (var ev in @ViewBag.Comments)
                {
                    <div class="container">
                        <div class="col-sm-1">
                            <div class="thumbnail">
                                <img class="img-responsive user-photo" src="@ev.ImageName">
                            </div><!-- /thumbnail -->
                        </div><!-- /col-sm-1 -->
                        <div class="col-sm-5">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <strong><a href="http://localhost:26589/UserProfile/?userID=@ev.AuthorId">@ev.AuthorName</a></strong> <span class="text-muted">commented @ev.WritingDate</span>
                                </div>
                                <div class="panel-body">
                                    @ev.Text
                                </div><!-- /panel-body -->
                            </div><!-- /panel panel-default -->
                        </div><!-- /col-sm-5 -->
                    </div><!-- /container -->
                }
                <div class="container">
                    <div class="col-sm-1">
                    </div><!-- /col-sm-1 -->
                    <div class="col-sm-4">
                            <input type="text" class="form-control" id="newcomment" placeholder="Write your comment">
                    </div><!-- /col-sm-4 -->
                    <button type="
                            button" class="btn btn-primary" id="commentbutton">Add</button>
                    <input id="eventidinfo" value="@ViewBag.Event.Id" style="display: none;">
                    
                    <input id="useridinfo"  value="@ViewBag.UserId" style="display: none;">
                    </div><!-- container -->
                </div>
          </div>
    </div>

    <div id="location" class="section location">
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <h3 class="section-title">Event Location</h3>
                    <address>
                        <p>Eardenia<br> The Grand Hall<br> House # 08, Road #52, Street<br> Phone: +1159t3764<br> Email: example@mail.com</p>
                    </address>
                </div>
                <div class="col-sm-9">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d96706.50013548559!2d-78.9870674333782!3d40.76030630398601!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x54eab584e432360b%3A0x1c3bb99243deb742!2sUnited+States!5e0!3m2!1sen!2sbd!4v1436299406518" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>

